@model IEnumerable<Book_A_Room.Models.AvailableRoom>

@{
    ViewBag.Title = "ViewAvailableRooms";
    Layout = "~/Views/Shared/TopBarForUser.cshtml";
}

<h2>Book A Room</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.room.RoomName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.room.AttendeesCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.room.Floor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BeginTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.room.RoomName)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.room.AttendeesCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.room.Floor)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.BeginTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.ActionLink("Book", "BookRomm", new { id = item.AvailableRoomId })
            </td>
        </tr>
    }

</table>
