@model IEnumerable<Book_A_Room.Models.Item>

@{
    ViewBag.Title = "ViewItems";
    Layout = "~/Views/Shared/TopBarForHR.cshtml";
}

<h2>Items For Rooms</h2>

<p>
    @Html.ActionLink("Add Items", "AddItemsForm", "HR", null, new { @class = "btn btn-primary" })
</p>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                
                @Html.ActionLink("Delete", "DeleteItem", new { id = item.ItemId })
            </td>
        </tr>
    }



</table>

